<h5 class="bg-6B7280">注文履歴詳細</h5>

<p class="font-weight-bold">注文情報</p>
  <table class="table">
    <tbody class="font-weight-normal">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
        〒<%= @order.postal_code %><br>
        <%= @order.address %><br>
        <%= @order.receiver_name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= Order.payment_types_i18n[@order.payment_type] %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= Order.statuses_i18n[@order.status] %></td>
      </tr>
    </tbody>
  </table>

<p class="font-weight-bold">請求情報</p>
  <table class="table">
    <tbody class="font-weight-normal">
      <tr>
        <th>商品合計</th>
        <td><%= @subtotal_amount %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th class="font-weight-bold">ご請求額</th>
        <td><%= @order.total_payment %></td>
      </tr>
    </tbody>
  </table>

<p class="font-weight-bold">注文内容</p>
  <table class="table">
    <thead class="font-weight-normal">
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @order.order_details.each do |detail| %>
        <td><%= detail.item.name %></td>
        <td><%= detail.item.price_with_tax %></td>
        <td><%= detail.amount %></td>
      <% end %>
        <td><%= @total_amount %></td>
      </tr>
    </tbody>
  </table>