<h5 class="bg-6B7280">会員情報編集</h5>
<%= form_with model: @customer do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to '退会する', check_path, class: 'btn btn-danger' %>