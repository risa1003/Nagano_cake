<!-- タイトル背景はCSSで変更する必要あり -->
<h5 class="bg-6B7280">マイページ</h5>
<h5 class="font-weight-bold">登録情報</h5>
<%= link_to '編集する', edit_customer_path, class: 'btn btn-success' %>
  <table>
    <tbody>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

<h5 class="font-weight-bold">配送先</h5> <%= link_to '一覧を見る', addresses_path, class: 'btn btn-primary' %>

<h5 class="font-weight-bold">注文履歴</h5> <%= link_to '一覧を見る', orders_path, class: 'btn btn-primary' %>