<h2>新規会員登録</h2>

<%= form_with model: @customer, url: new_customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name, "(姓)" %>
    <%= last_name.field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name, "(名)" %>
    <%= first_name.field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(姓カナ)" %>
    <%= last_name_kana.field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "(名カナ)" %>
    <%= first_name_kana.field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= postal_code.field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= address.field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
    <%= telephone_number.field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

<%= render "public/shared/links" %>