<!-- タイトル背景はCSSで変更する必要あり -->
<h3 class="bg-6B7280">配送先登録/一覧</h3>

<%= form_with model: @address, url: addresses_path do |f| %>
  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :receiver_name, "宛名" %>
    <%= f.text_field :receiver_name %>
  </div>

  <div class="actions">
    <%= f.submit '新規登録', class: "btn btn-success" %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th class="font-weight-normal">郵便番号</th>
      <th class="font-weight-normal">住所</th>
      <th class="font-weight-normal">宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @addresses.each do |f| %>
    <tr>
      <td><%= f.postal_code %></td>
      <td><%= f.address %></td>
      <td><%= f.receiver_name %></td>
      <td><%= link_to "編集する", edit_address_path(f.id), class: 'btn btn-success btn-sm' %></td>
      <td><%= link_to "削除する", address_path(f.id), class: 'btn btn-danger btn-sm', method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  <% end %>
  </tbody>
</table>