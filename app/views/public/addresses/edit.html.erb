<!-- タイトル背景はCSSで変更する必要あり -->
<h5 class="bg-6B7280">配送先編集</h5>

  <%= form_with model: @address, url: address_path do |f| %>
    <div class="field">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :receiver_name, "宛名" %>
      <%= f.text_field :receiver_name %>
    </div>

    <div class="actions">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>

  <% end %>