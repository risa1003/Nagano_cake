<h5>商品一覧(全<%= @items.count %>件)</h5>
  <div>
  <% @items.each do |item| %>
    <div>
      <p>
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_item_image(250, 350) %>
      <% end %>
      </p>
      <p><%= item.name %></p>
      <p>¥<%= item.price_with_tax %></p>
    </div>
  <% end %>
  </div>

<%= paginate @items %>