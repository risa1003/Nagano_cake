<h2>商品新規登録</h2>
<%= form_with model: @item do |f| %>
  <div class="field">
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :genre, "ジャンル" %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :price, "税抜価格" %>
  </div>

  <!-- 販売ステータス -->
  <div class="field">
    <%= f.radio_button :is_sold, "true" %>
    <%= f.label :is_sold_true, "販売中" %>
    <%= f.radio_button :is_sold, "false" %>
    <%= f.label :is_sold_false, "販売停止中" %>
  </div>

  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>