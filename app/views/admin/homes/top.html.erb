<!-- タイトル背景はCSSで変更する必要あり -->
<h5 class="bg-6B7280">注文履歴一覧</h5>

  <table class="table">
    <thead>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= order.customers.lost_name %><%= order.customers.first_name %></td>
        <td><%= order.order_details.amount %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= paginate @orders %>