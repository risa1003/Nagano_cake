<!-- タイトル背景はCSSで変更する必要あり -->
<h3 class="bg-6B7280">ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="field">
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: "btn btn-success" %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
    </tr>
  <% end %>
  </tbody>
</table>