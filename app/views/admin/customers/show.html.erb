<!-- タイトル背景はCSSで変更する必要あり -->
<h3 class="bg-6B7280">
  <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
</h3>

  <table>
    <tbody>
      <tr>
        <th class="font-weight-normal">会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">氏名</th>
        <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">フリガナ</th>
        <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th class="font-weight-normal">会員ステータス</th>
        <td class="<%= @customer.is_deleted ? 'text-success' : 'text-secondary' %>">
          <%= @customer.is_deleted ? '有効' : '退会' %>
        </td>
      </tr>
    </tbody>
  </table>

  <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
  <%= link_to "注文履歴一覧を見る", orders_path, class: 'btn btn-primary' %>