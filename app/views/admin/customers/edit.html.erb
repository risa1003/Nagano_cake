<!-- タイトル背景はCSSで変更する必要あり -->
<h3 class="bg-6B7280">
  <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
</h3>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <div class="field">
    <%= f.label :id, "会員ID" %>
    <%= @customer.id %>
  </div>

  <div class="field">
    <%= f.label "名前" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
   <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :is_deleted, "会員ステータス" %>
    <%= f.radio_button :is_deleted, "false" %>
    <%= f.label :is_deleted_false, "有効" %>
    <%= f.radio_button :is_deleted, "true" %>
    <%= f.label :is_deleted_true, "退会" %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>

<% end %>