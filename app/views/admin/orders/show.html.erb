<!-- タイトル背景はCSSで変更する必要あり -->
<h5 class="bg-6B7280">注文履歴詳細</h5>

    <div class="field">
      <p class="font-weight-bold">購入者</p>
      <%= @order.customer.last_name %> <%= @order.customer.first_name %>
    </div>

    <div class="field">
      <p class="font-weight-bold">注文日</p>
      <%= @order.created_at.strftime('%Y/%m/%d') %>
    </div>

    <div class="field">
      <p class="font-weight-bold">配送先</p>
      〒<%= @order.postal_code %><%= @order.address %>
      <%= @order.receiver_name %>
    </div>

    <div class="field">
      <p class="font-weight-bold">支払方法</p>
      <%= @order.payment_type %>
    </div>

    <div class="field">
      <%= form_with model: @order, url: order_path(@order.id) do |f| %>
        <%= f.label "注文ステータス" %>
        <%= f.select :status, options_from_collection_for_select(Order.all, :id, :status) %>
        <%= f.submit "更新", class: "btn btn-success" %>
      <% end %>
    </div>

  <table class="table">
    <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th></th>
    </thead>
    <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price_tax_in %></td>
        <%= form_with model: order_detail, url: admin_order_detail_path(order_detail.id) do |f| %>
          <td><%= f.select :product_status, options_from_collection_for_select(Order_details.all, :id, :product_status) %></td>
          <td><%= f.submit "更新", class: "btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_payment %></td>
      </tr>
      <tr>
        <th>送料</th>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td><%= @order.total_payment + @order.postage %></td>
      </tr>
    </tfoot>
  </table>